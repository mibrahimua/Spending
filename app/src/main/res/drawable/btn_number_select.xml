<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#9F9F9F" />
            <stroke
                android:width="1dp"
                android:color="#9F9F9F" />
            <corners
                android:bottomLeftRadius="400dp"
                android:bottomRightRadius="400dp"
                android:topLeftRadius="400dp"
                android:topRightRadius="400dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#DCDCDC"
                android:endColor="#DCDCDC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#DCDCDC" />
            <corners
                android:bottomLeftRadius="400dp"
                android:bottomRightRadius="400dp"
                android:topLeftRadius="400dp"
                android:topRightRadius="400dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
