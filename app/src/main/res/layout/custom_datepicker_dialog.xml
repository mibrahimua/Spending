<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Date"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentMonth"
        style="@style/MonthPickerStyle"
        android:layout_width="wrap_content"
        android:text="THIS MONTH"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/closeBtn"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/closeBtn"
        style="@style/MonthPickerStyle"
        android:layout_width="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="X"
        app:layout_constraintBaseline_toBaselineOf="@+id/currentMonth"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/yearCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintBaseline_toBaselineOf="@+id/yearBefore"
        app:layout_constraintEnd_toStartOf="@+id/yearNext"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/yearBefore"
        tools:text="2020" />

    <TextView
        android:id="@+id/yearNext"
        style="@style/MonthPickerStyle"
        android:layout_marginEnd="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="after"
        android:textAlignment="textEnd"
        app:layout_constraintBaseline_toBaselineOf="@+id/yearCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/yearCurrent" />

    <TextView
        android:id="@+id/yearBefore"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="before"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/yearCurrent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/monthJan"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="JAN"
        app:layout_constraintEnd_toStartOf="@+id/monthFeb"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearCurrent" />

    <TextView
        android:id="@+id/monthFeb"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="FEB"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthJan"
        app:layout_constraintEnd_toStartOf="@+id/monthMar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthJan" />

    <TextView
        android:id="@+id/monthMar"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="MAR"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthFeb"
        app:layout_constraintEnd_toStartOf="@+id/monthApr"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthFeb" />

    <TextView
        android:id="@+id/monthApr"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="APR"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthMar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthMar" />

    <TextView
        android:id="@+id/monthMay"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="MAY"
        app:layout_constraintEnd_toStartOf="@+id/monthJun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthJan" />

    <TextView
        android:id="@+id/monthJun"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="JUN"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthMay"
        app:layout_constraintEnd_toStartOf="@+id/monthJul"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthMay" />

    <TextView
        android:id="@+id/monthJul"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="JUL"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthJun"
        app:layout_constraintEnd_toStartOf="@+id/monthAug"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthJun" />

    <TextView
        android:id="@+id/monthAug"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="AUG"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthJul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthJul" />

    <TextView
        android:id="@+id/monthSep"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:text="SEP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/monthOct"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthMay" />

    <TextView
        android:id="@+id/monthOct"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="OCT"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthSep"
        app:layout_constraintEnd_toStartOf="@+id/monthNov"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthSep" />

    <TextView
        android:id="@+id/monthNov"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="NOV"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthOct"
        app:layout_constraintEnd_toStartOf="@+id/monthDec"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthOct" />

    <TextView
        android:id="@+id/monthDec"
        style="@style/MonthPickerStyle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="DEC"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthNov"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/monthNov" />
</androidx.constraintlayout.widget.ConstraintLayout>